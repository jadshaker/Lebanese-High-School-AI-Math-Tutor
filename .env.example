# API Keys
OPENAI_API_KEY=your_openai_api_key_here
MINERU_API_KEY=your_mineru_api_key_here
RUNPOD_API_KEY=your_runpod_api_key_here

# Small LLM Service Configuration
SMALL_LLM_SERVICE_URL=https://api.runpod.ai/v2/<small_llm_endpoint_id>/openai
SMALL_LLM_MODEL_NAME=deepseek-ai/DeepSeek-R1-Distill-Qwen-7B
SMALL_LLM_API_KEY=your_runpod_api_key

# Reformulator LLM Service Configuration
REFORMULATOR_LLM_SERVICE_URL=https://api.runpod.ai/v2/<reformulator_endpoint_id>/openai
REFORMULATOR_LLM_MODEL_NAME=deepseek-ai/DeepSeek-R1-Distill-Qwen-7B
REFORMULATOR_LLM_API_KEY=your_runpod_api_key

# Embedding Service Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Fine-Tuned Model Service Configuration
FINE_TUNED_MODEL_SERVICE_URL=https://api.runpod.ai/v2/<fine_tuned_endpoint_id>/openai
FINE_TUNED_MODEL_NAME=deepseek-ai/DeepSeek-R1-Distill-Qwen-7B
FINE_TUNED_MODEL_API_KEY=your_runpod_api_key

# Large LLM Service Configuration
LARGE_LLM_MODEL_NAME=gpt-4o-mini

# Small LLM Sampling Parameters
SMALL_LLM_TEMPERATURE=0.7
SMALL_LLM_TOP_P=0.9
SMALL_LLM_MAX_TOKENS=
SMALL_LLM_TIMEOUT=300

# Fine-Tuned Model Sampling Parameters
FINE_TUNED_MODEL_TEMPERATURE=0.7
FINE_TUNED_MODEL_TOP_P=0.9
FINE_TUNED_MODEL_MAX_TOKENS=
FINE_TUNED_MODEL_TIMEOUT=300

# Large LLM Sampling Parameters
LARGE_LLM_TEMPERATURE=0.7
LARGE_LLM_TOP_P=0.9
LARGE_LLM_MAX_TOKENS=
LARGE_LLM_TIMEOUT=300

# Reformulator LLM Sampling Parameters
REFORMULATOR_LLM_TEMPERATURE=0.6
REFORMULATOR_LLM_TOP_P=0.9
REFORMULATOR_LLM_MAX_TOKENS=
REFORMULATOR_LLM_TIMEOUT=300

# Intent Classifier LLM Sampling Parameters
INTENT_CLASSIFIER_LLM_TEMPERATURE=0.1
INTENT_CLASSIFIER_LLM_MAX_TOKENS=50

# Answer Retrieval Service Configuration
CACHE_TOP_K=5
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Confidence Thresholds (4-tier routing)
CONFIDENCE_TIER_1=0.85
CONFIDENCE_TIER_2=0.70
CONFIDENCE_TIER_3=0.50

# Session Service Configuration
SESSION_TTL_SECONDS=3600
SESSION_MAX_HISTORY=50
SESSION_CLEANUP_INTERVAL=300

# Tutoring Configuration
TUTORING_ENABLED=true
TUTORING_MAX_DEPTH=4
TUTORING_INTERACTION_THRESHOLD=0.85

# Intent Classifier Configuration
INTENT_RULE_CONFIDENCE_THRESHOLD=0.80
INTENT_USE_LLM_FALLBACK=true

# Reformulator Configuration
REFORMULATOR_USE_LLM=true
